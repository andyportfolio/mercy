<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/oneFragment"
        android:name="com.sideproject.mercy.presentation.view.onboarding.OnBoardingFragment"
        android:label="fragment_one"
        tools:layout="@layout/fragment_onboarding" />
    <fragment
        android:id="@+id/twoFragment"
        android:name="com.sideproject.mercy.presentation.view.two.TwoFragment"
        android:label="fragment_two"
        tools:layout="@layout/fragment_two" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.sideproject.mercy.presentation.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_oneFragment"
            app:destination="@id/oneFragment" />
        <action
            android:id="@+id/action_mainFragment_to_twoFragment"
            app:destination="@id/twoFragment" />
    </fragment>
</navigation>